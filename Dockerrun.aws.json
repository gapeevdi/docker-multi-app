{
    "AWSEBDockerrunVersion" : 2,
    "containerDefinitions" : [
        {
            "name" : "client",
            "image" : "gapeevdi/multi-client-app",
            "hostname" : "client",
            "essential" : false
        },
        {
            "name" : "server",
            "image" : "gapeevdi/multi-server",
            "hostname" : "api",
            "essential" : false
        },
        {
            "name" : "worker",
            "image" : "gapeevdi/multi-service",
            "hostname" : "worker",
            "essential" : false
        },
        {
            "name" : "nginx",
            "image" : "gapeevdi/multi-nginx",
            "hostname" : "nginx",
            "essential" : true,
            "portMappings" : [
                {
                    "hostPort" : 80,
                    "cotainerPort" : 80
                }
            ],
            "links" : ["client", "server"]
        }
    ]
}